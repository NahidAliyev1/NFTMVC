@using NFTMVC.BL.ViewModel
@using NFTMVC.DAL.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model CollectionVM

            <!-- Form Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Add Collections</h6>
                            <form asp-area="Admin" asp-controller="Collections" asp-action="Create" method="post" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Image</label>
                        <input asp-for="ImgFile" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">

                        <span asp-validation-for="ImgFile" class="text-danger"></span>
                                        
                                    
                                </div>
                                <div class="mb-3">
                                    <label for="exampleInputPassword1" class="form-label">Category Name</label>
                                    <input asp-for="CategoryName"
                                    class="form-control" id="exampleInputPassword1">
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                                </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Collection Number</label>
                        <input asp-for="CollectionNumber"
                               class="form-control" id="exampleInputPassword1">
                        <span asp-validation-for="CollectionNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label"> Name</label>
                        <input asp-for="Name"
                               class="form-control" id="exampleInputPassword1">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                                <button type="submit" class="btn btn-primary">Create</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Form End -->


           